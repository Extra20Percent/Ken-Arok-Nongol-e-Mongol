using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class TowerInfoUI : MonoBehaviour {

	public Text selectedText;

	void Start()
	{
		selectedText.text = "Tower";
	}

	void Update()
	{
		if(Shop.chooseA)
		selectedText.text = "Waisya Tower";

		if(Shop.chooseB)
		selectedText.text = "Kshatriya Tower";

		if(Shop.chooseC)
		selectedText.text = "Brahmana Tower";
	}
}
